<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="mainContainer" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.gate.metropos.Controllers.EmployeeControllers.FirstTimePasswordController"
      alignment="CENTER" spacing="20"
      stylesheets="@../styles/global.css, @../styles/common.css"
      prefHeight="600" prefWidth="700">

    <Label text="Change Your Password" styleClass="title-label"/>
    <Label text="Please change your password before continuing" styleClass="subtitle-label"/>

    <VBox spacing="10">
        <Label text="Current Password" styleClass="field-label"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <PasswordField fx:id="currentPasswordField" styleClass="input-field" HBox.hgrow="ALWAYS"/>

        </HBox>
    </VBox>

    <VBox spacing="10">
        <Label text="New Password" styleClass="field-label"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <PasswordField fx:id="newPasswordField" styleClass="input-field" HBox.hgrow="ALWAYS"/>

        </HBox>
    </VBox>

    <VBox spacing="10">
        <Label text="Confirm New Password" styleClass="field-label"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <PasswordField fx:id="confirmPasswordField" styleClass="input-field" HBox.hgrow="ALWAYS"/>

        </HBox>
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="updateButton" text="Update Password"/>
    </HBox>
</VBox>
