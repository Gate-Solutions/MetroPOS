<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.gate.metropos.Controllers.SuperAdminControllers.ReportsController"
      stylesheets="@../styles/global.css, @../styles/SuperAdmin/reports.css ,  @../styles/common.css"
      spacing="20">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Reports Dashboard" styleClass="page-title"/>

    <HBox spacing="20">
        <VBox styleClass="report-card">
            <Label text="Sales Reports" styleClass="card-title"/>
            <Button text="Generate Report" styleClass="report-button"/>
            <Button text="View History" styleClass="report-button"/>
        </VBox>

        <VBox styleClass="report-card">
            <Label text="Inventory Reports" styleClass="card-title"/>
            <Button text="Generate Report" styleClass="report-button"/>
            <Button text="View History" styleClass="report-button"/>
        </VBox>

        <VBox styleClass="report-card">
            <Label text="User Activity Reports" styleClass="card-title"/>
            <Button text="Generate Report" styleClass="report-button"/>
            <Button text="View History" styleClass="report-button"/>
        </VBox>
    </HBox>

    <TabPane VBox.vgrow="ALWAYS">
        <Tab text="Recent Reports">
            <TableView>
                <columns>
                    <TableColumn text="Report Name"/>
                    <TableColumn text="Generated Date"/>
                    <TableColumn text="Type"/>
                    <TableColumn text="Generated By"/>
                    <TableColumn text="Actions"/>
                </columns>
            </TableView>
        </Tab>
        <Tab text="Scheduled Reports"/>
        <Tab text="Custom Reports"/>
    </TabPane>
</VBox>