<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.gate.metropos.Controllers.CashierControllers.DashboardController"
      spacing="20">

    <HBox spacing="20" styleClass="dashboard-cards">
        <VBox styleClass="card">
            <FontAwesomeIconView glyphName="SHOPPING_CART" size="30"/>
            <Text fx:id="productCount" text="0"/>
            <Text text="Total Products"/>
        </VBox>

        <VBox styleClass="card">
            <FontAwesomeIconView glyphName="MONEY" size="30"/>
            <Text fx:id="saleAmount" text="0"/>
            <Text text="Sales Amount"/>
        </VBox>

        <VBox styleClass="card">
            <FontAwesomeIconView glyphName="FILE_TEXT" size="30"/>
            <Text fx:id="invoiceCount" text="0"/>
            <Text text="Sales Invoices"/>
        </VBox>
    </HBox>
</VBox>