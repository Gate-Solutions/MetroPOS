<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.metropos.Controllers.SuperAdminControllers.UsersController"
      stylesheets="@../styles/global.css, @../styles/SuperAdmin/users.css , @../styles/SuperAdmin/common.css"
      spacing="20">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Manage Users" styleClass="page-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Add New User" styleClass="primary-button" fx:id="addUserBtn"/>
    </HBox>

    <HBox spacing="10">
        <TextField promptText="Search users..." HBox.hgrow="ALWAYS"/>
        <ComboBox promptText="Filter by Role"/>
        <ComboBox promptText="Filter by Branch"/>
    </HBox>

    <TableView VBox.vgrow="ALWAYS" fx:id="usersTable">
        <columns>
            <TableColumn text="User ID" fx:id="userIdColumn"/>
            <TableColumn text="Name" fx:id="nameColumn"/>
            <TableColumn text="Role" fx:id="roleColumn"/>
            <TableColumn text="Branch" fx:id="branchColumn"/>
            <TableColumn text="Email" fx:id="emailColumn"/>
            <TableColumn text="Status" fx:id="statusColumn"/>
            <TableColumn text="Actions" fx:id="actionsColumn"/>
        </columns>
    </TableView>
</VBox>